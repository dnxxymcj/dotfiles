[alias]
  a = add 
  aa = add --all
  ap = add --patch

  sp = stash push
  sl = stash list
  sa = stash apply
  sd = stash drop

  w = worktree
  wa = worktree add
  wl = worktree list
  wr = worktree remove

  co = checkout
  sw = switch

  c = commit -v
  cm = commit -m
  amend = commit --amend

  m = merge
  mf = merge --ff-only


  rb = rebase
  ra = rebase --abort
  rc = rebase --continue
  ri = rebase --interactive

  d = diff
  ds = diff --staged
  dl = diff HEAD^
  dw = diff --patience --word-diff
  dom = diff origin/master 

  b = branch 
  bm = branch --merged
  bn = branch --no-merged
  ba = branch -a
  br = branch -r
  bv = branch -vv

  s = status -sb
  st = status

  unstage = restore --staged
  grep = grep --line-number
  rl = reflog
  cp = cherry-pick

  ps = push
  pl = pull
  r = remote
  f = fetch
  cl = clone

  ls = ls-files -s
  cat = cat-file

  al = "!git config -l | grep alias | cut -c 7-"
  ours = "!f() { git checkout --ours $@ && git add $@; }; f"
  theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"

  count = shortlog -sn
  ll = log -1 HEAD --stat
  l = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  day = "!sh -c 'git log --reverse --no-merges --branches=* --date=local --after=\"yesterday 11:59PM\" --author=\"`git config --get user.name`\"'"

[user]
  name = CJ
  email = dnxxymcj@gmail.com

[core]
  editor = lvim
  excludesfile = $HOME/.gitignore_global

[init]
  defaultBranch = master

[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f

[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
  ui = auto
