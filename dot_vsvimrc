let mapleader = " "

noremap <C-h> <C-w>h
noremap <C-j> <C-w>j
noremap <C-k> <C-w>k
noremap <C-l> <C-w>l


inoremap <C-b> <left>
inoremap <C-f> <right>
inoremap <C-a> <Home>
inoremap <C-e> <End>
inoremap <C-p> <Up>
inoremap <C-n> <Down>

xnoremap <  <gv
xnoremap >  >gv

nnoremap U <C-r>
noremap ; :
nnoremap <CR> :noh<CR><CR>:<backspace>

inoremap <silent> jj <ESC>
cnoremap <silent> jj <ESC>
inoremap <silent> JJ <ESC>
cnoremap <silent> JJ <ESC>

noremap <silent> <up> :resize -2<CR>
noremap <silent> <down> :resize -2<CR>
noremap <silent> <left> :vertical resize -2<CR>
noremap <silent> <right> :vertical resize +2<CR>
