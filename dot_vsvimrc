" 设置前导键
let mapleader = " "

noremap <silent> s h
noremap <silent> t l
noremap <silent> n j
noremap <silent> e k

noremap <silent> S ^
noremap <silent> T $
nnoremap <silent> N :m .+1<CR>==
nnoremap <silent> E :m .-2<CR>==
vnoremap <silent> N :m '>+1<CR>gv-gv
vnoremap <silent> E :m '<-2<CR>gv-gv

noremap <silent> l e
noremap <silent> L E
noremap <silent> h s
noremap <silent> H S
noremap <silent> j t
noremap <silent> J T
noremap <silent> k n
noremap <silent> K N

noremap <silent> ge gk
noremap <silent> gn gj
noremap <silent> gl ge
noremap <silent> gL gE

noremap <C-m> <C-w>h
noremap <C-n> <C-w>j
noremap <C-e> <C-w>k
noremap <C-i> <C-w>l


inoremap <C-b> <left>
inoremap <C-f> <right>
inoremap <C-a> <Home>
inoremap <C-e> <End>
inoremap <C-p> <Up>
inoremap <C-n> <Down>

xnoremap <  <gv
xnoremap >  >gv

nnoremap U <C-r>
noremap ; :
nnoremap <CR> :noh<CR><CR>:<backspace>

inoremap <silent> uy <ESC>
vnoremap <silent> uy <ESC>
onoremap <silent> uy <ESC>
cnoremap <silent> uy <ESC>

inoremap <silent> UY <ESC>
vnoremap <silent> UY <ESC>
onoremap <silent> UY <ESC>
cnoremap <silent> UY <ESC>

noremap <silent> <up> :resize -2<CR>
noremap <silent> <down> :resize -2<CR>
noremap <silent> <left> :vertical resize -2<CR>
noremap <silent> <right> :vertical resize +2<CR>