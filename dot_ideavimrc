" 显示当前模式
set showmode
" 共享系统粘贴板
set clipboard+=unnamed
" 打开行号
set number
" 打开相对行号
set relativenumber
" 设置命令历史记录条数
set history=2000
" 关闭兼容vi
set nocompatible
" 开启语法高亮功能
syntax enable
" 允许用指定语法高亮配色方案替换默认方案
syntax on
" 模式搜索实时预览,增量搜索
set incsearch
" 设置搜索高亮
set hlsearch
" 忽略大小写 (该命令配合smartcase使用较好，否则不要开启)
set ignorecase
" 模式查找时智能忽略大小写
set smartcase
" vim自身命令行模式智能补全
set wildmenu
" 总是显示状态栏
set laststatus=2
" 显示光标当前位置
set ruler
" 高亮显示当前行/列
set cursorline
"set cursorcolumn
" 禁止折行
set nowrap
" 将制表符扩展为空格
set expandtab
" 设置编辑时制表符占用空格数
set tabstop=4
" 设置格式化时制表符占用空格数
set shiftwidth=2
" 让 vim 把连续数量的空格视为一个制表符
set softtabstop=2
" 基于缩进或语法进行代码折叠
set foldmethod=indent
set foldmethod=syntax
" 启动 vim 时关闭折叠代码
set nofoldenable


" 设置前导键
let mapleader = " "
noremap <SPACE> <Nop>

noremap <silent> s h
noremap <silent> t l
noremap <silent> n j
noremap <silent> e k

noremap <silent> S ^
noremap <silent> T $
nnoremap <silent> N :m .+1<CR>==
nnoremap <silent> E :m .-2<CR>==
vnoremap <silent> N :m '>+1<CR>gv-gv
vnoremap <silent> E :m '<-2<CR>gv-gv

noremap <silent> l e
noremap <silent> L E
noremap <silent> h s
noremap <silent> H S
noremap <silent> j t
noremap <silent> J T
noremap <silent> k n
noremap <silent> K N

noremap <silent> ge gk
noremap <silent> gn gj
noremap <silent> gl ge
noremap <silent> gL gE

noremap <C-m> <C-w>h
noremap <C-n> <C-w>j
noremap <C-e> <C-w>k
noremap <C-i> <C-w>l


inoremap <C-b> <left>
inoremap <C-f> <right>
inoremap <C-a> <Home>
inoremap <C-e> <End>
inoremap <C-p> <Up>
inoremap <C-n> <Down>

xnoremap <  <gv
xnoremap >  >gv

nnoremap U <C-r>
noremap ; :
nnoremap <CR> :noh<CR><CR>:<backspace>

inoremap <silent> uy <ESC>
vnoremap <silent> uy <ESC>
onoremap <silent> uy <ESC>
cnoremap <silent> uy <ESC>

inoremap <silent> UY <ESC>
vnoremap <silent> UY <ESC>
onoremap <silent> UY <ESC>
cnoremap <silent> UY <ESC>

noremap <silent> <up> :resize -2<CR>
noremap <silent> <down> :resize -2<CR>
noremap <silent> <left> :vertical resize -2<CR>
noremap <silent> <right> :vertical resize +2<CR>

" other vim plugins
set surround
set easymotion
set highlightedyank
set nerdtree
set ideajoin


nnoremap <Leader>w :action SaveAll<CR>:action ReformatCode<CR>
noremap <Leader>/ :action CommentByLineComment<CR>
noremap <leader>z :action ToggleZenMode<CR>
" Open NERDTree (use q to exit)
noremap <leader>e :NERDTreeToggle<CR>

